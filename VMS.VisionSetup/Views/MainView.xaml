<Window x:Class="VMS.VisionSetup.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMS.VisionSetup"
        xmlns:ts="clr-namespace:VMS.VisionSetup.Views.ToolSettings"
        xmlns:controls="clr-namespace:VMS.VisionSetup.Controls"
        xmlns:converters="clr-namespace:VMS.VisionSetup.Converters"
        xmlns:vm="clr-namespace:VMS.VisionSetup.ViewModels"
        xmlns:recipe="clr-namespace:VMS.VisionSetup.Views.Recipe"
        xmlns:camera="clr-namespace:VMS.VisionSetup.Views.Camera"
        mc:Ignorable="d"
        Title="BODA VISION AI - OpenCvSharp Vision System"
        WindowStartupLocation="Manual"
        Left="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Left}"
        Top="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Top}"
        Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <converters:DisplayModeToStringConverter x:Key="DisplayModeToStringConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent" BorderThickness="1"
                                SnapsToDevicePixels="True">
                            <Border x:Name="HoverOverlay" CornerRadius="5" Background="Transparent"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  TextBlock.Foreground="{TemplateBinding Foreground}"
                                                  TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                                  TextBlock.FontSize="{TemplateBinding FontSize}"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay" Property="Background" Value="#18FFFFFF"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HoverOverlay" Property="Background" Value="#15000000"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3A3A3C"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#C42B1C"/>
        </Style>

        <!-- Step Control Button Style -->
        <Style x:Key="StepControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,4"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#505054"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.35"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tool Item Close Button Style -->
        <Style x:Key="ToolCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#44FFFFFF"/>
                                <Setter Property="Foreground" Value="#FF5252"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Style="{StaticResource MenuBarStyle}">
            <Menu.ItemContainerStyle>
                <Style TargetType="MenuItem" BasedOn="{StaticResource TopMenuItemStyle}"/>
            </Menu.ItemContainerStyle>

            <MenuItem Header="_File">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Open Image File"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding OpenImageFileCommand}"
                          InputGestureText="Ctrl+O"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Exit"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding CloseCommand}"/>
            </MenuItem>

            <MenuItem Header="_Tools">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Run All Tools"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding RunAllCommand}"
                          InputGestureText="F5"/>
                <MenuItem Header="Run Selected Tool"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding RunSelectedCommand}"
                          InputGestureText="F6"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Clear All Tools"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding ClearToolsCommand}"/>
            </MenuItem>

            <MenuItem Header="_Recipe">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Recipe Manager"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Click="RecipeManager_Click"/>
                <MenuItem Header="Camera Manager"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Click="CameraManager_Click"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Save Recipe"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Click="SaveRecipe_Click"
                          InputGestureText="Ctrl+S"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="About" Style="{StaticResource SubMenuItemFullStyle}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <!-- File -->
                <Button Command="{Binding OpenImageFileCommand}"
                        Style="{StaticResource ToolbarButtonStyle}" ToolTip="Open Image (Ctrl+O)">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M2,6 L2,16 L18,16 L18,8 L11,8 L9,6 Z"
                              Stroke="White" StrokeThickness="1.4" Fill="Transparent"
                              Width="15" Height="12" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Open Image" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border Width="1" Background="#4A4A4C" Margin="8,4" CornerRadius="1"/>

                <!-- Execution -->
                <Button Command="{Binding RunAllCommand}"
                        Style="{StaticResource ToolbarButtonStyle}" ToolTip="Run All Tools (F5)">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M4,2 L16,10 L4,18 Z" Fill="White"
                              Width="11" Height="13" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Run All" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding RunSelectedCommand}"
                        Style="{StaticResource ToolbarButtonStyle}" ToolTip="Run Selected Tool (F6)">
                    <StackPanel Orientation="Horizontal">
                        <Canvas Width="15" Height="13" VerticalAlignment="Center">
                            <Path Data="M1,1 L10,6.5 L1,12 Z" Fill="White"/>
                            <Path Data="M12.5,1 L12.5,12" Stroke="White" StrokeThickness="2"/>
                        </Canvas>
                        <TextBlock Text="Run Selected" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border Width="1" Background="#4A4A4C" Margin="8,4" CornerRadius="1"/>

                <!-- Clear -->
                <Button Command="{Binding ClearToolsCommand}"
                        Style="{StaticResource DangerButtonStyle}" ToolTip="Clear All Tools">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M6,6 L6,17 L14,17 L14,6 M4,4 L16,4 M8,2 L12,2 M9,8 L9,15 M11,8 L11,15"
                              Stroke="White" StrokeThickness="1.3"
                              Width="13" Height="14" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Clear All" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border Width="1" Background="#4A4A4C" Margin="8,4" CornerRadius="1"/>

                <!-- Management -->
                <Button Click="RecipeManager_Click"
                        Style="{StaticResource ToolbarButtonStyle}" Background="#E67E22" ToolTip="Recipe Manager">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M4,2 L4,18 L14,18 L14,6 L10,2 Z M10,2 L10,6 L14,6 M7,10 L12,10 M7,13 L11,13"
                              Stroke="White" StrokeThickness="1.2" Fill="Transparent"
                              Width="13" Height="14" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Recipe" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="CameraManager_Click"
                        Style="{StaticResource ToolbarButtonStyle}" Background="#7B1FA2" ToolTip="Camera Manager">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M2,6 L2,15 L18,15 L18,6 L15,6 L13,4 L7,4 L5,6 Z M10,7.5 A2.5,2.5 0 1 1 10,12.5 A2.5,2.5 0 1 1 10,7.5"
                              Stroke="White" StrokeThickness="1.2" Fill="Transparent"
                              Width="15" Height="12" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Camera" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border Width="1" Background="#4A4A4C" Margin="8,4" CornerRadius="1"/>

                <!-- Camera Info -->
                <Button x:Name="CameraInfoButton"
                        Command="{Binding ShowCameraInfoCommand}"
                        Style="{StaticResource ToolbarButtonStyle}" Background="#00897B" ToolTip="Camera Info">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Path Data="M2,6 L2,15 L18,15 L18,6 L15,6 L13,4 L7,4 L5,6 Z"
                                  Stroke="White" StrokeThickness="1.2" Fill="Transparent"
                                  Width="15" Height="12" Stretch="Uniform" VerticalAlignment="Center"/>
                            <!-- Connection status dot -->
                            <Ellipse Width="7" Height="7" HorizontalAlignment="Right" VerticalAlignment="Top"
                                     Margin="0,-2,-2,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#F44336"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCameraConnected}" Value="True">
                                                <Setter Property="Fill" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </Grid>
                        <TextBlock Text="Camera Info" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Acquire Image -->
                <Button Command="{Binding AcquireImageCommand}"
                        Style="{StaticResource ToolbarButtonStyle}" Background="#1565C0" ToolTip="Acquire Image">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M2,6 L2,15 L18,15 L18,6 L15,6 L13,4 L7,4 L5,6 Z M10,7.5 A2.5,2.5 0 1 1 10,12.5 A2.5,2.5 0 1 1 10,7.5 M3,17 L3,19 L17,19 L17,17"
                              Stroke="White" StrokeThickness="1.2" Fill="Transparent"
                              Width="15" Height="14" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock Text="Acquire" Margin="7,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Camera Info Popup -->
        <Popup x:Name="CameraInfoPopup"
               PlacementTarget="{Binding ElementName=CameraInfoButton}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True"
               IsOpen="{Binding IsCameraInfoPopupOpen, Mode=TwoWay}">
            <Border Background="#2D2D30" BorderBrush="#555555" BorderThickness="1"
                    CornerRadius="6" Padding="16" MinWidth="280">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                </Border.Effect>
                <Grid>
                    <!-- No camera selected -->
                    <TextBlock Text="카메라를 선택하세요"
                               Foreground="#999999" FontSize="13"
                               HorizontalAlignment="Center" Margin="0,10"
                               Visibility="{Binding SelectedCamera, Converter={StaticResource NullToCollapsedConverter}, ConverterParameter=Invert}"/>

                    <!-- Camera info panel -->
                    <StackPanel Visibility="{Binding SelectedCamera, Converter={StaticResource NullToCollapsedConverter}}">
                        <!-- Header with icon and name -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Path Data="M2,6 L2,15 L18,15 L18,6 L15,6 L13,4 L7,4 L5,6 Z M10,7.5 A2.5,2.5 0 1 1 10,12.5 A2.5,2.5 0 1 1 10,7.5"
                                  Stroke="#00BCD4" StrokeThickness="1.5" Fill="Transparent"
                                  Width="20" Height="16" Stretch="Uniform" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedCamera.Name}" Foreground="White"
                                       FontSize="15" FontWeight="Bold" Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Details grid -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Manufacturer" Foreground="#999999" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCamera.Manufacturer}" Foreground="White" FontSize="12" Margin="0,2"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Model" Foreground="#999999" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCamera.Model}" Foreground="White" FontSize="12" Margin="0,2"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="IP Address" Foreground="#999999" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCamera.ConnectionString}" Foreground="White" FontSize="12" Margin="0,2"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Resolution" Foreground="#999999" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedCamera.Resolution}" Foreground="White" FontSize="12" Margin="0,2"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Status" Foreground="#999999" FontSize="12" Margin="0,2"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,2">
                                <Ellipse Width="9" Height="9" VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#F44336"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCameraConnected}" Value="True">
                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Foreground="White" FontSize="12" Margin="6,0,0,0" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Disconnected"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCameraConnected}" Value="True">
                                                    <Setter Property="Text" Value="Connected"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <!-- Connect/Disconnect buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                            <Button Command="{Binding ConnectCameraCommand}"
                                    Style="{StaticResource ToolbarButtonStyle}" Background="#4CAF50"
                                    Padding="12,5" FontSize="12" Content="Connect"/>
                            <Button Command="{Binding DisconnectCameraCommand}"
                                    Style="{StaticResource ToolbarButtonStyle}" Background="#F44336"
                                    Padding="12,5" FontSize="12" Margin="6,0,0,0" Content="Disconnect"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Recipe / Camera / Step / Tool Palette -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Current Recipe Name -->
                    <Border Grid.Row="0" Background="#1B5E20" CornerRadius="3" Margin="8,8,8,4" Padding="8,6">
                        <TextBlock Foreground="White" FontSize="12" FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis">
                            <Run Text="Now Recipe: " Foreground="#A5D6A7"/>
                            <Run Text="{Binding CurrentRecipeName, Mode=OneWay}" FontWeight="Bold"/>
                        </TextBlock>
                    </Border>

                    <!-- Row 1: Camera Selector -->
                    <StackPanel Grid.Row="1" Margin="8,4,8,4">
                        <TextBlock Text="Camera" Foreground="#FFD700" FontWeight="Bold" FontSize="12" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Cameras}"
                                  SelectedItem="{Binding SelectedCamera}"
                                  Background="#3C3C3C" Foreground="Black"
                                  BorderBrush="#555555" BorderThickness="1"
                                  FontSize="11" Padding="6,4" MinHeight="28">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Foreground="Black" FontWeight="SemiBold"/>
                                        <!--<TextBlock Text=" - " Foreground="Gray"/>
                                        <TextBlock Text="{Binding ConnectionString}" Foreground="Gray" FontSize="10"/>-->
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Row 2: Step Management Header + Buttons -->
                    <Grid Grid.Row="2" Margin="8,4,8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Steps" Foreground="#FFD700" FontWeight="Bold" FontSize="12"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <!-- Add Step -->
                            <Button Command="{Binding AddStepCommand}" ToolTip="Add Step"
                                    Style="{StaticResource StepControlButtonStyle}">
                                <Path Data="M12,2 L12,22 M2,12 L22,12" Stroke="#4CAF50" StrokeThickness="2"
                                      Width="14" Height="14" Stretch="Uniform"/>
                            </Button>
                            <!-- Delete Step -->
                            <Button Command="{Binding DeleteStepCommand}" ToolTip="Delete Step"
                                    Style="{StaticResource StepControlButtonStyle}">
                                <Path Data="M3,6 L21,6 M8,6 L8,2 L16,2 L16,6 M5,6 L5,22 L19,22 L19,6"
                                      Stroke="#F44336" StrokeThickness="1.5"
                                      Width="14" Height="14" Stretch="Uniform"/>
                            </Button>
                            <!-- Move Up -->
                            <Button Command="{Binding MoveStepUpCommand}" ToolTip="Move Up"
                                    Style="{StaticResource StepControlButtonStyle}">
                                <Path Data="M12,4 L4,14 L9,14 L9,20 L15,20 L15,14 L20,14 Z"
                                      Fill="#2196F3" Width="14" Height="14" Stretch="Uniform"/>
                            </Button>
                            <!-- Move Down -->
                            <Button Command="{Binding MoveStepDownCommand}" ToolTip="Move Down"
                                    Style="{StaticResource StepControlButtonStyle}">
                                <Path Data="M12,20 L4,10 L9,10 L9,4 L15,4 L15,10 L20,10 Z"
                                      Fill="#FF9800" Width="14" Height="14" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Row 3: Step DataGrid -->
                    <DataGrid Grid.Row="3" ItemsSource="{Binding Steps}"
                              SelectedItem="{Binding SelectedStep}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              HeadersVisibility="Column" CanUserAddRows="False"
                              Background="#2D2D30" Foreground="White"
                              BorderBrush="#555555" BorderThickness="1"
                              RowBackground="#2D2D30" AlternatingRowBackground="#333337"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#444444"
                              Margin="8,4,8,4" MaxHeight="160" MinHeight="60"
                              FontSize="11">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="Padding" Value="6,3"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="BorderBrush" Value="#555555"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#0078D4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Name}" Width="50"/>
                            <DataGridTextColumn Header="Resolution" Binding="{Binding Resolution, StringFormat={}{0:F3}}" Width="70"/>
                            <DataGridTextColumn Header="Tools" Binding="{Binding Tools.Count}" Width="40"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 4: Tool Palette -->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tool Palette"
                                   Foreground="#FFD700" FontWeight="Bold" FontSize="12"
                                   Margin="8,4,8,2"/>

                        <TreeView Grid.Row="1" ItemsSource="{Binding ToolTree}"
                                  Background="Transparent" Foreground="White" BorderThickness="0"
                                  Margin="5,0,5,5">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Tools}">
                                    <TextBlock Text="{Binding CategoryName}"
                                               Foreground="#FFD700" FontWeight="Bold" FontSize="12"/>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#3E3E42" CornerRadius="3"
                                                    Padding="8,4" Margin="0,2"
                                                    PreviewMouseMove="ToolItem_PreviewMouseMove"
                                                    Cursor="Hand">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}"
                                                               Foreground="White" FontSize="11"
                                                               VerticalAlignment="Center"/>
                                                    <controls:HelpIcon ToolType="{Binding ToolType}"
                                                                       Margin="6,0,0,0"
                                                                       VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </Grid>
            </Border>

            <!-- Center Panel - Workspace and Images -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Dropped Tools Workspace -->
                <Border Grid.Column="0" Background="#1E1E1E" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tool Workspace (Drag tools here)"
                                   Foreground="Gray" FontSize="12" Margin="10,5"/>

                        <!-- 연결선 및 도구 워크스페이스 컨테이너 -->
                        <Grid Grid.Row="1" AllowDrop="True" Drop="Sidebar2_Drop" Background="#2D2D30">
                            <!-- 연결선 렌더링 캔버스 (도구 아래에 그려짐) -->
                            <Canvas x:Name="ConnectionCanvas" IsHitTestVisible="False"/>

                            <!-- 연결 모드 진행 중 안내 텍스트 -->
                            <TextBlock x:Name="ConnectionModeHint"
                                       Text=""
                                       Foreground="#FFEB3B" FontSize="12" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"
                                       Margin="0,5,0,0" Visibility="Collapsed"/>

                            <!-- 도구 아이템 표시 -->
                            <ItemsControl x:Name="WorkspaceArea"
                                          ItemsSource="{Binding DroppedTools}"
                                          Background="Transparent">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="ToolOuterBorder"
                                                BorderBrush="#555555" BorderThickness="1"
                                                CornerRadius="4,4,0,0" Cursor="Hand" Margin="2"
                                                MouseLeftButtonDown="Item_MouseLeftButtonDown"
                                                MouseMove="Item_MouseMove"
                                                MouseLeftButtonUp="Item_MouseLeftButtonUp"
                                                MouseRightButtonDown="Item_MouseRightButtonDown"
                                                MinWidth="150">
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <ContextMenu.Style>
                                                        <Style TargetType="ContextMenu">
                                                            <Setter Property="Background" Value="#2D2D30"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="BorderBrush" Value="#555555"/>
                                                        </Style>
                                                    </ContextMenu.Style>
                                                    <MenuItem Header="Rename Tool"
                                                              Click="RenameToolMenuItem_Click"/>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Connect Image"
                                                              Tag="Image"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#4CAF50"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Connect Coordinates"
                                                              Tag="Coordinates"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#2196F3"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Connect Result"
                                                              Tag="Result"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#FF9800"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Remove Connections"
                                                              Click="RemoveConnectionsMenuItem_Click"/>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Delete Tool"
                                                              Click="DeleteToolMenuItem_Click"
                                                              Foreground="#FF5252"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Tab Header: ToolType + Close button -->
                                                <Border x:Name="TabHeader" Grid.Row="0"
                                                        Background="#1A3A5C"
                                                        CornerRadius="3,3,0,0"
                                                        Padding="8,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding ToolType}"
                                                                   Foreground="#B0C4DE" FontSize="11"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <Button Grid.Column="1" Content="X"
                                                                Style="{StaticResource ToolCloseButtonStyle}"
                                                                Command="{Binding DataContext.RemoveToolCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Margin="6,0,0,0"/>
                                                    </Grid>
                                                </Border>

                                                <!-- Tab Body: Name -->
                                                <Border Grid.Row="1" Background="#3E3E42"
                                                        Padding="8,5">
                                                    <TextBlock Text="{Binding Name}"
                                                               Foreground="White" FontSize="12"
                                                               FontWeight="Normal"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter TargetName="ToolOuterBorder" Property="BorderBrush" Value="#0078D4"/>
                                                <Setter TargetName="TabHeader" Property="Background" Value="#0078D4"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- 연결 모드에서 임시 연결선 표시 캔버스 -->
                            <Canvas x:Name="TempConnectionCanvas" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch"
                              HorizontalAlignment="Center" Background="#333333" Cursor="SizeWE"/>

                <!-- Image Display Area - TabControl with 2D/3D views -->
                <Border Grid.Column="2" Background="#1E1E1E" Margin="5">
                    <TabControl Background="Transparent" BorderThickness="0" Padding="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="#999999"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,6"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="TabBorder"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4,4,0,0" Margin="0,0,2,0">
                                                <ContentPresenter ContentSource="Header"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="TabBorder" Property="Background" Value="#1E1E1E"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="TabBorder" Property="Background" Value="#3E3E42"/>
                                                </Trigger>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsSelected" Value="True"/>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter TargetName="TabBorder" Property="Background" Value="#1E1E1E"/>
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <!-- 2D View Tab -->
                        <TabItem Header="2D View">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto" MaxHeight="250"/>
                                </Grid.RowDefinitions>

                                <!-- Row 0: Header - ComboBox Switcher + Clear Button -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
                                    <ComboBox ItemsSource="{Binding DisplayModes}"
                                              SelectedItem="{Binding SelectedDisplayMode}"
                                              Background="#3C3C3C" Foreground="Black"
                                              BorderBrush="#555555" BorderThickness="1"
                                              FontSize="12" Padding="8,3" MinWidth="150">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource DisplayModeToStringConverter}}"
                                                           Foreground="Black"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <Button Content="Clear Result"
                                            Command="{Binding ClearResultImageCommand}"
                                            Background="#3C3C3C" Foreground="White"
                                            BorderBrush="#555555" BorderThickness="1"
                                            Padding="8,2" Margin="10,0,0,0"
                                            FontSize="11" Cursor="Hand"
                                            Visibility="{Binding IsOriginalImageMode, Converter={StaticResource InverseBoolToVisibility}}"/>
                                </StackPanel>

                                <!-- Row 1: ImageCanvas -->
                                <controls:ImageCanvas x:Name="ImageCanvasControl" Grid.Row="1"
                                                      SourceImage="{Binding DisplayMat, Mode=OneWay}"
                                                      ROICollection="{Binding ROIShapes, Mode=TwoWay}"
                                                      SelectedROI="{Binding SelectedROI, Mode=TwoWay}"
                                                      IsToolbarVisible="{Binding IsOriginalImageMode}"
                                                      IsROIEditingEnabled="{Binding IsOriginalImageMode}"
                                                      ROICreated="ImageCanvas_ROICreated"
                                                      ROIModified="ImageCanvas_ROIModified"
                                                      ROISelectionChanged="ImageCanvas_ROISelectionChanged"
                                                      Margin="5"/>

                                <!-- Row 2: Tool Run Results DataGrid -->
                                <Border Grid.Row="2" BorderBrush="#333333" BorderThickness="0,1,0,0"
                                        Margin="5,0,5,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="Run Results"
                                                   Foreground="#FFD700" FontWeight="Bold" FontSize="12"
                                                   Margin="5,5,5,3"/>

                                        <DataGrid Grid.Row="1"
                                                  ItemsSource="{Binding ToolRunResults}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True"
                                                  CanUserAddRows="False"
                                                  CanUserDeleteRows="False"
                                                  CanUserReorderColumns="False"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="Horizontal"
                                                  HorizontalGridLinesBrush="#444444"
                                                  Background="#1E1E1E"
                                                  Foreground="White"
                                                  BorderBrush="#555555"
                                                  BorderThickness="1"
                                                  RowBackground="#2D2D2D"
                                                  AlternatingRowBackground="#252526"
                                                  Height="150"
                                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                  ScrollViewer.CanContentScroll="True"
                                                  FontSize="12">
                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="#3C3C3C"/>
                                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Padding" Value="8,4"/>
                                                    <Setter Property="BorderBrush" Value="#555555"/>
                                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Tool Name"
                                                                    Binding="{Binding ToolName}"
                                                                    Width="*"
                                                                    MinWidth="120">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Padding" Value="6,3"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Pass/Fail"
                                                                    Binding="{Binding Result}"
                                                                    Width="80">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Padding" Value="6,3"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Result}" Value="True">
                                                                    <Setter Property="Foreground" Value="#4EC94E"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Result}" Value="False">
                                                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Result Value"
                                                                    Binding="{Binding ResultValue}"
                                                                    Width="2*"
                                                                    MinWidth="150">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Padding" Value="6,3"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </TabItem>

                        <!-- 3D View Tab -->
                        <TabItem Header="3D View">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header with Load Sample button -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
                                    <Button Content="Load Sample"
                                            Command="{Binding LoadSamplePointCloudCommand}"
                                            Style="{StaticResource ToolbarButtonStyle}"
                                            Background="#7B1FA2"/>
                                </StackPanel>

                                <!-- Height Slicing Panel -->
                                <Border Grid.Row="1" Background="#2D2D30" CornerRadius="4" Margin="10,2,10,5" Padding="10,6">
                                    <StackPanel>
                                        <TextBlock Text="Height Slicing" Foreground="#FFD700" FontWeight="Bold" FontSize="13" Margin="0,0,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Baseline -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Baseline" Foreground="#CCCCCC" VerticalAlignment="Center" FontSize="11"/>
                                            <Slider Grid.Row="0" Grid.Column="1"
                                                    Value="{Binding HeightBaseline}"
                                                    Minimum="{Binding PointCloudYMin}" Maximum="{Binding PointCloudYMax}"
                                                    VerticalAlignment="Center" Margin="4,2"/>
                                            <TextBox Grid.Row="0" Grid.Column="2"
                                                     Text="{Binding HeightBaseline, StringFormat=F1}"
                                                     Background="#3C3C3C" Foreground="#CCCCCC" BorderBrush="#555555"
                                                     FontSize="11" Padding="3,1" VerticalAlignment="Center"/>

                                            <!-- Lower Limit -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Lower" Foreground="#CCCCCC" VerticalAlignment="Center" FontSize="11"/>
                                            <Slider Grid.Row="1" Grid.Column="1"
                                                    Value="{Binding HeightLowerLimit}"
                                                    Minimum="{Binding PointCloudYMin}" Maximum="{Binding PointCloudYMax}"
                                                    VerticalAlignment="Center" Margin="4,2"/>
                                            <TextBox Grid.Row="1" Grid.Column="2"
                                                     Text="{Binding HeightLowerLimit, StringFormat=F1}"
                                                     Background="#3C3C3C" Foreground="#CCCCCC" BorderBrush="#555555"
                                                     FontSize="11" Padding="3,1" VerticalAlignment="Center"/>

                                            <!-- Upper Limit -->
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Upper" Foreground="#CCCCCC" VerticalAlignment="Center" FontSize="11"/>
                                            <Slider Grid.Row="2" Grid.Column="1"
                                                    Value="{Binding HeightUpperLimit}"
                                                    Minimum="{Binding PointCloudYMin}" Maximum="{Binding PointCloudYMax}"
                                                    VerticalAlignment="Center" Margin="4,2"/>
                                            <TextBox Grid.Row="2" Grid.Column="2"
                                                     Text="{Binding HeightUpperLimit, StringFormat=F1}"
                                                     Background="#3C3C3C" Foreground="#CCCCCC" BorderBrush="#555555"
                                                     FontSize="11" Padding="3,1" VerticalAlignment="Center"/>
                                        </Grid>

                                        <Button Content="Generate Height Map"
                                                Command="{Binding GenerateHeightMapCommand}"
                                                Background="#0E639C" Foreground="White"
                                                Padding="12,4" Margin="0,6,0,0"
                                                HorizontalAlignment="Left"
                                                FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <!-- 3D Point Cloud Canvas -->
                                <controls:PointDrawingCanvas x:Name="PointCanvasControl" Grid.Row="2"
                                                             PointCloud="{Binding CurrentPointCloud}"
                                                             HeightSliceBaseline="{Binding HeightBaseline}"
                                                             HeightSliceLower="{Binding HeightLowerLimit}"
                                                             HeightSliceUpper="{Binding HeightUpperLimit}"
                                                             Margin="5"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>

            <!-- Right Panel - Tool Settings -->
            <Border Grid.Column="2" Background="#252526" BorderBrush="#333333" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Tool Settings"
                               Foreground="#FFD700" FontWeight="Bold" FontSize="14"
                               Margin="10,10,10,5"/>

                    <ts:ToolSettingsView x:Name="ToolSettingsControl" Grid.Row="1"
                                         DataContext="{Binding SelectedToolSettings}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding ExecutionTimeText}"
                           Foreground="White" VerticalAlignment="Center"
                           Margin="20,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Tools: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DroppedTools.Count}"
                               Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
