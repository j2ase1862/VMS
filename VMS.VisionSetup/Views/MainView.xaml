<Window x:Class="VMS.VisionSetup.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMS.VisionSetup"
        xmlns:ts="clr-namespace:VMS.VisionSetup.Views.ToolSettings"
        xmlns:controls="clr-namespace:VMS.VisionSetup.Controls"
        xmlns:converters="clr-namespace:VMS.VisionSetup.Converters"
        xmlns:vm="clr-namespace:VMS.VisionSetup.ViewModels"
        xmlns:recipe="clr-namespace:VMS.VisionSetup.Views.Recipe"
        xmlns:camera="clr-namespace:VMS.VisionSetup.Views.Camera"
        mc:Ignorable="d"
        Title="BODA VISION AI - OpenCvSharp Vision System"
        WindowStartupLocation="Manual"
        Left="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Left}"
        Top="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Top}"
        Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <converters:DisplayModeToStringConverter x:Key="DisplayModeToStringConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 도구 아이템 스타일 -->
        <Style x:Key="ToolItemBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="Background" Value="#0078D4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Style="{StaticResource MenuBarStyle}">
            <Menu.ItemContainerStyle>
                <Style TargetType="MenuItem" BasedOn="{StaticResource TopMenuItemStyle}"/>
            </Menu.ItemContainerStyle>

            <MenuItem Header="_File">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Open Image File"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding OpenImageFileCommand}"
                          InputGestureText="Ctrl+O"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Exit"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding CloseCommand}"/>
            </MenuItem>

            <MenuItem Header="_Tools">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Run All Tools"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding RunAllCommand}"
                          InputGestureText="F5"/>
                <MenuItem Header="Run Selected Tool"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding RunSelectedCommand}"
                          InputGestureText="F6"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Clear All Tools"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding ClearToolsCommand}"/>
            </MenuItem>

            <MenuItem Header="_Recipe">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Recipe Manager"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Click="RecipeManager_Click"/>
                <MenuItem Header="Camera Manager"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Click="CameraManager_Click"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Save Recipe"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Click="SaveRecipe_Click"
                          InputGestureText="Ctrl+S"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="About" Style="{StaticResource SubMenuItemFullStyle}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Open Image"
                        Command="{Binding OpenImageFileCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Button Content="Run All"
                        Command="{Binding RunAllCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Button Content="Run Selected"
                        Command="{Binding RunSelectedCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Separator Margin="10,0" Background="#555555" Width="1"/>
                <Button Content="Clear All"
                        Command="{Binding ClearToolsCommand}"
                        Style="{StaticResource DangerButtonStyle}"/>
                <Separator Margin="10,0" Background="#555555" Width="1"/>
                <Button Content="Recipe"
                        Click="RecipeManager_Click"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Background="#FF9800"/>
                <Button Content="Camera"
                        Click="CameraManager_Click"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Background="#9C27B0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Recipe / Camera / Step / Tool Palette -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Current Recipe Name -->
                    <Border Grid.Row="0" Background="#1B5E20" CornerRadius="3" Margin="8,8,8,4" Padding="8,6">
                        <TextBlock Foreground="White" FontSize="12" FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis">
                            <Run Text="Now Recipe: " Foreground="#A5D6A7"/>
                            <Run Text="{Binding CurrentRecipeName, Mode=OneWay}" FontWeight="Bold"/>
                        </TextBlock>
                    </Border>

                    <!-- Row 1: Camera Selector -->
                    <StackPanel Grid.Row="1" Margin="8,4,8,4">
                        <TextBlock Text="Camera" Foreground="#FFD700" FontWeight="Bold" FontSize="12" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Cameras}"
                                  SelectedItem="{Binding SelectedCamera}"
                                  Background="#3C3C3C" Foreground="Black"
                                  BorderBrush="#555555" BorderThickness="1"
                                  FontSize="11" Padding="6,4" MinHeight="28">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Foreground="Black" FontWeight="SemiBold"/>
                                        <!--<TextBlock Text=" - " Foreground="Gray"/>
                                        <TextBlock Text="{Binding ConnectionString}" Foreground="Gray" FontSize="10"/>-->
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Row 2: Step Management Header + Buttons -->
                    <Grid Grid.Row="2" Margin="8,4,8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Steps" Foreground="#FFD700" FontWeight="Bold" FontSize="12"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <!-- Add Step -->
                            <Button Command="{Binding AddStepCommand}" ToolTip="Add Step"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Padding="4,2" Margin="1,0">
                                <Path Data="M12,2 L12,22 M2,12 L22,12" Stroke="#4CAF50" StrokeThickness="2"
                                      Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                            <!-- Delete Step -->
                            <Button Command="{Binding DeleteStepCommand}" ToolTip="Delete Step"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Padding="4,2" Margin="1,0">
                                <Path Data="M3,6 L21,6 M8,6 L8,2 L16,2 L16,6 M5,6 L5,22 L19,22 L19,6"
                                      Stroke="#F44336" StrokeThickness="1.5"
                                      Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                            <!-- Move Up -->
                            <Button Command="{Binding MoveStepUpCommand}" ToolTip="Move Up"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Padding="4,2" Margin="1,0">
                                <Path Data="M12,4 L4,14 L9,14 L9,20 L15,20 L15,14 L20,14 Z"
                                      Fill="#2196F3" Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                            <!-- Move Down -->
                            <Button Command="{Binding MoveStepDownCommand}" ToolTip="Move Down"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Padding="4,2" Margin="1,0">
                                <Path Data="M12,20 L4,10 L9,10 L9,4 L15,4 L15,10 L20,10 Z"
                                      Fill="#FF9800" Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Row 3: Step DataGrid -->
                    <DataGrid Grid.Row="3" ItemsSource="{Binding Steps}"
                              SelectedItem="{Binding SelectedStep}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              HeadersVisibility="Column" CanUserAddRows="False"
                              Background="#2D2D30" Foreground="White"
                              BorderBrush="#555555" BorderThickness="1"
                              RowBackground="#2D2D30" AlternatingRowBackground="#333337"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#444444"
                              Margin="8,4,8,4" MaxHeight="160" MinHeight="60"
                              FontSize="11">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="Padding" Value="6,3"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="BorderBrush" Value="#555555"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#0078D4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Name}" Width="50"/>
                            <DataGridTextColumn Header="Resolution" Binding="{Binding Resolution, StringFormat={}{0:F3}}" Width="70"/>
                            <DataGridTextColumn Header="Tools" Binding="{Binding Tools.Count}" Width="40"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 4: Tool Palette -->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tool Palette"
                                   Foreground="#FFD700" FontWeight="Bold" FontSize="12"
                                   Margin="8,4,8,2"/>

                        <TreeView Grid.Row="1" ItemsSource="{Binding ToolTree}"
                                  Background="Transparent" Foreground="White" BorderThickness="0"
                                  Margin="5,0,5,5">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Tools}">
                                    <TextBlock Text="{Binding CategoryName}"
                                               Foreground="#FFD700" FontWeight="Bold" FontSize="12"/>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#3E3E42" CornerRadius="3"
                                                    Padding="8,4" Margin="0,2"
                                                    PreviewMouseMove="ToolItem_PreviewMouseMove"
                                                    Cursor="Hand">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}"
                                                               Foreground="White" FontSize="11"
                                                               VerticalAlignment="Center"/>
                                                    <controls:HelpIcon ToolType="{Binding ToolType}"
                                                                       Margin="6,0,0,0"
                                                                       VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </Grid>
            </Border>

            <!-- Center Panel - Workspace and Images -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Dropped Tools Workspace -->
                <Border Grid.Column="0" Background="#1E1E1E" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tool Workspace (Drag tools here)"
                                   Foreground="Gray" FontSize="12" Margin="10,5"/>

                        <!-- 연결선 및 도구 워크스페이스 컨테이너 -->
                        <Grid Grid.Row="1" AllowDrop="True" Drop="Sidebar2_Drop" Background="#2D2D30">
                            <!-- 연결선 렌더링 캔버스 (도구 아래에 그려짐) -->
                            <Canvas x:Name="ConnectionCanvas" IsHitTestVisible="False"/>

                            <!-- 연결 모드 진행 중 안내 텍스트 -->
                            <TextBlock x:Name="ConnectionModeHint"
                                       Text=""
                                       Foreground="#FFEB3B" FontSize="12" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"
                                       Margin="0,5,0,0" Visibility="Collapsed"/>

                            <!-- 도구 아이템 표시 -->
                            <ItemsControl x:Name="WorkspaceArea"
                                          ItemsSource="{Binding DroppedTools}"
                                          Background="Transparent">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ToolItemBorderStyle}"
                                                MouseLeftButtonDown="Item_MouseLeftButtonDown"
                                                MouseMove="Item_MouseMove"
                                                MouseLeftButtonUp="Item_MouseLeftButtonUp"
                                                MouseRightButtonDown="Item_MouseRightButtonDown">
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <ContextMenu.Style>
                                                        <Style TargetType="ContextMenu">
                                                            <Setter Property="Background" Value="#2D2D30"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="BorderBrush" Value="#555555"/>
                                                        </Style>
                                                    </ContextMenu.Style>
                                                    <MenuItem Header="Connect Image"
                                                              Tag="Image"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#4CAF50"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Connect Coordinates"
                                                              Tag="Coordinates"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#2196F3"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Connect Result"
                                                              Tag="Result"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#FF9800"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Remove Connections"
                                                              Click="RemoveConnectionsMenuItem_Click"/>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Delete Tool"
                                                              Click="DeleteToolMenuItem_Click"
                                                              Foreground="#FF5252"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="White" FontWeight="SemiBold"
                                                           VerticalAlignment="Center"/>
                                                <Button Content="X"
                                                        Command="{Binding DataContext.RemoveToolCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent" Foreground="Red"
                                                        BorderThickness="0" Padding="5,0"
                                                        Margin="10,0,0,0" Cursor="Hand"
                                                        FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- 연결 모드에서 임시 연결선 표시 캔버스 -->
                            <Canvas x:Name="TempConnectionCanvas" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch"
                              HorizontalAlignment="Center" Background="#333333" Cursor="SizeWE"/>

                <!-- Image Display Area (Single Canvas with ComboBox Switcher) -->
                <Border Grid.Column="2" Background="#1E1E1E" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header: ComboBox Switcher + Clear Button -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
                            <ComboBox ItemsSource="{Binding DisplayModes}"
                                      SelectedItem="{Binding SelectedDisplayMode}"
                                      Background="#3C3C3C" Foreground="Black"
                                      BorderBrush="#555555" BorderThickness="1"
                                      FontSize="12" Padding="8,3" MinWidth="150">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource DisplayModeToStringConverter}}"
                                                   Foreground="Black"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button Content="Clear Result"
                                    Command="{Binding ClearResultImageCommand}"
                                    Background="#3C3C3C" Foreground="White"
                                    BorderBrush="#555555" BorderThickness="1"
                                    Padding="8,2" Margin="10,0,0,0"
                                    FontSize="11" Cursor="Hand"
                                    Visibility="{Binding IsOriginalImageMode, Converter={StaticResource InverseBoolToVisibility}}"/>
                        </StackPanel>

                        <!-- Single ImageCanvas -->
                        <controls:ImageCanvas x:Name="ImageCanvasControl" Grid.Row="1"
                                              SourceImage="{Binding DisplayMat, Mode=OneWay}"
                                              ROICollection="{Binding ROIShapes, Mode=TwoWay}"
                                              SelectedROI="{Binding SelectedROI, Mode=TwoWay}"
                                              IsToolbarVisible="{Binding IsOriginalImageMode}"
                                              IsROIEditingEnabled="{Binding IsOriginalImageMode}"
                                              ROICreated="ImageCanvas_ROICreated"
                                              ROIModified="ImageCanvas_ROIModified"
                                              ROISelectionChanged="ImageCanvas_ROISelectionChanged"
                                              Margin="5"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Panel - Tool Settings -->
            <Border Grid.Column="2" Background="#252526" BorderBrush="#333333" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Tool Settings"
                               Foreground="#FFD700" FontWeight="Bold" FontSize="14"
                               Margin="10,10,10,5"/>

                    <ts:ToolSettingsView x:Name="ToolSettingsControl" Grid.Row="1"
                                         DataContext="{Binding SelectedToolSettings}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding ExecutionTimeText}"
                           Foreground="White" VerticalAlignment="Center"
                           Margin="20,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Tools: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DroppedTools.Count}"
                               Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
