<UserControl x:Class="VMS.VisionSetup.Views.ToolSettings.Tools.HeightSlicerToolSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VMS.VisionSetup.Controls">
    <StackPanel>
        <controls:SliderParameter Label="Min Z (mm)"
            Value="{Binding MinZ}" Minimum="-10000" Maximum="10000"
            TickFrequency="1" ValueFormat="F1"
            ToolType="HeightSlicerTool" ParameterName="MinZ"/>
        <controls:SliderParameter Label="Max Z (mm)"
            Value="{Binding MaxZ}" Minimum="-10000" Maximum="10000"
            TickFrequency="1" ValueFormat="F1"
            ToolType="HeightSlicerTool" ParameterName="MaxZ"/>
    </StackPanel>
</UserControl>
