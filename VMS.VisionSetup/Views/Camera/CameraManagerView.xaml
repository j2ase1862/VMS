<UserControl x:Class="VMS.VisionSetup.Views.Camera.CameraManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#252526" Foreground="White"
             d:DesignHeight="500" d:DesignWidth="500">

    <UserControl.Resources>
        <Style x:Key="CameraButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource CameraButtonStyle}">
            <Setter Property="Background" Value="#3E3E42"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505054"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource CameraButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="CameraListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#1084D8"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Camera List Panel -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Cameras"
                       Foreground="#FFD700" FontWeight="Bold" FontSize="14"
                       Margin="0,0,0,10"/>

            <ListBox x:Name="CameraList" Grid.Row="1"
                     Background="#2D2D30" BorderBrush="#555555" BorderThickness="1"
                     ItemContainerStyle="{StaticResource CameraListItemStyle}"
                     SelectionChanged="CameraList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding DisplayInfo}" Foreground="#888888" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add" Click="AddCamera_Click" Style="{StaticResource CameraButtonStyle}" Width="55"/>
                <Button x:Name="RemoveButton" Content="Remove" Click="RemoveCamera_Click"
                        Style="{StaticResource DangerButtonStyle}" Width="65" IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Camera Properties Panel -->
        <Border Grid.Column="1" Background="#2D2D30" BorderBrush="#555555" BorderThickness="1" Padding="15">
            <Grid x:Name="PropertiesPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Camera Properties"
                           Foreground="#FFD700" FontWeight="Bold" FontSize="14"
                           Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Name" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="NameBox" Style="{StaticResource InputStyle}"/>

                        <TextBlock Text="Manufacturer" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="ManufacturerBox" IsEditable="True"
                                  Background="#3E3E42" Foreground="White"
                                  BorderBrush="#555555" Margin="0,0,0,10">
                            <ComboBoxItem Content="Basler"/>
                            <ComboBoxItem Content="IDS"/>
                            <ComboBoxItem Content="HIK"/>
                            <ComboBoxItem Content="Allied Vision"/>
                            <ComboBoxItem Content="JAI"/>
                            <ComboBoxItem Content="Point Grey"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>

                        <TextBlock Text="Model" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ModelBox" Style="{StaticResource InputStyle}"/>

                        <TextBlock Text="Serial Number" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="SerialNumberBox" Style="{StaticResource InputStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Width" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="WidthBox" Style="{StaticResource InputStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Height" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="HeightBox" Style="{StaticResource InputStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Connection String (IP or Device Path)" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ConnectionStringBox" Style="{StaticResource InputStyle}"/>

                        <CheckBox x:Name="EnabledCheckBox" Content="Enabled"
                                  Foreground="White" Margin="0,5,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
                    <Button Content="Save" Click="SaveCamera_Click" Style="{StaticResource CameraButtonStyle}" Width="70"/>
                    <Button Content="Cancel" Click="CancelEdit_Click" Style="{StaticResource SecondaryButtonStyle}" Width="70"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
