<UserControl x:Class="VMS.VisionSetup.Views.Recipe.RecipeListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:VMS.VisionSetup.Converters"
             mc:Ignorable="d"
             Background="#252526" Foreground="White"
             d:DesignHeight="600" d:DesignWidth="400">

    <UserControl.Resources>
        <converters:InverseLengthToVisibilityConverter x:Key="InverseLengthToVisibilityConverter"/>
        <Style x:Key="RecipeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource RecipeButtonStyle}">
            <Setter Property="Background" Value="#3E3E42"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505054"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource RecipeButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RecipeListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#1084D8"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Recipe Manager"
                   Foreground="#FFD700" FontWeight="Bold" FontSize="16"
                   Margin="0,0,0,10"/>

        <!-- Search Box -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     Background="#3E3E42" Foreground="White"
                     BorderBrush="#555555" BorderThickness="1"
                     Padding="8,6" FontSize="12"
                     TextChanged="SearchBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBlock Grid.Column="0" Text="Search recipes..."
                       Foreground="#888888" FontSize="12"
                       Margin="10,7,0,0" IsHitTestVisible="False"
                       Visibility="{Binding Text.Length, ElementName=SearchBox, Converter={StaticResource InverseLengthToVisibilityConverter}, FallbackValue=Visible}"/>

            <Button Grid.Column="1" Content="X"
                    Width="30" Margin="5,0,0,0"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="ClearSearch_Click"
                    ToolTip="Clear search"/>
        </Grid>

        <!-- Recipe List -->
        <ListBox x:Name="RecipeList"
                 Grid.Row="2"
                 Background="#2D2D30" BorderBrush="#555555" BorderThickness="1"
                 ItemContainerStyle="{StaticResource RecipeListItemStyle}"
                 SelectionChanged="RecipeList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding Name}"
                                   Foreground="White" FontWeight="SemiBold" FontSize="13"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock Text="v" Foreground="#888888" FontSize="10"/>
                            <TextBlock Text="{Binding Version}" Foreground="#888888" FontSize="10" Margin="2,0,10,0"/>
                            <TextBlock Text="{Binding StepCount}" Foreground="#888888" FontSize="10"/>
                            <TextBlock Text=" steps, " Foreground="#888888" FontSize="10"/>
                            <TextBlock Text="{Binding ToolCount}" Foreground="#888888" FontSize="10"/>
                            <TextBlock Text=" tools" Foreground="#888888" FontSize="10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock Text="{Binding ModifiedAtDisplay}" Foreground="#666666" FontSize="10"/>
                            <TextBlock Text=" - " Foreground="#666666" FontSize="10"/>
                            <TextBlock Text="{Binding Author}" Foreground="#666666" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Action Buttons -->
        <WrapPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="New" Click="NewRecipe_Click" Style="{StaticResource RecipeButtonStyle}" Width="60"/>
            <Button x:Name="LoadButton" Content="Load" Click="LoadRecipe_Click" Style="{StaticResource RecipeButtonStyle}" Width="60" IsEnabled="False"/>
            <Button x:Name="DeleteButton" Content="Delete" Click="DeleteRecipe_Click" Style="{StaticResource DangerButtonStyle}" Width="60" IsEnabled="False"/>
        </WrapPanel>

        <!-- Import/Export Buttons -->
        <WrapPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5,0,0">
            <Button Content="Import" Click="ImportRecipe_Click" Style="{StaticResource SecondaryButtonStyle}" Width="60"/>
            <Button x:Name="ExportButton" Content="Export" Click="ExportRecipe_Click" Style="{StaticResource SecondaryButtonStyle}" Width="60" IsEnabled="False"/>
            <Button Content="Open Folder" Click="OpenFolder_Click" Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
        </WrapPanel>
    </Grid>
</UserControl>
