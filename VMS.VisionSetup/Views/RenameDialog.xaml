<Window x:Class="VMS.VisionSetup.Views.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Tool"
        Width="350" Height="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter new tool name:"
                   Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,8"/>

        <TextBox x:Name="NameTextBox" Grid.Row="1"
                 Background="#3E3E42" Foreground="White"
                 BorderBrush="#555555" BorderThickness="1"
                 Padding="6,4" FontSize="13"
                 CaretBrush="White"
                 SelectionBrush="#0078D4"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="75" Margin="0,0,8,0"
                    IsDefault="True" Click="OkButton_Click"
                    Background="#0078D4" Foreground="White"
                    BorderThickness="0" Padding="0,5"
                    Cursor="Hand"/>
            <Button Content="Cancel" Width="75"
                    IsCancel="True"
                    Background="#3E3E42" Foreground="White"
                    BorderBrush="#555555" BorderThickness="1" Padding="0,5"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
