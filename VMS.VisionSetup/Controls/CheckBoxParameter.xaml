<UserControl x:Class="VMS.VisionSetup.Controls.CheckBoxParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VMS.VisionSetup.Controls"
             x:Name="Root">
    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
        <CheckBox Content="{Binding Label, ElementName=Root}"
                  IsChecked="{Binding IsChecked, ElementName=Root, Mode=TwoWay}"
                  Foreground="White" VerticalAlignment="Center"/>
        <controls:HelpIcon ToolType="{Binding ToolType, ElementName=Root}"
                           ParameterName="{Binding ParameterName, ElementName=Root}"
                           Margin="5,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
