<UserControl x:Class="VMS.VisionSetup.Controls.TextBoxParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VMS.VisionSetup.Controls"
             x:Name="Root">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,2">
            <TextBlock Text="{Binding Label, ElementName=Root}"
                       Foreground="LightGray" FontSize="12" VerticalAlignment="Center"/>
            <controls:HelpIcon ToolType="{Binding ToolType, ElementName=Root}"
                               ParameterName="{Binding ParameterName, ElementName=Root}"
                               Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBox Text="{Binding Value, ElementName=Root, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                 Background="#3E3E42" Foreground="White" BorderBrush="#555555"
                 Padding="5,3" Margin="0,0,0,5"/>
    </StackPanel>
</UserControl>
