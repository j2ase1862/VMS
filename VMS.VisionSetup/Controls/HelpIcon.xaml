<UserControl x:Class="VMS.VisionSetup.Controls.HelpIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="20">

    <UserControl.Resources>
        <Style x:Key="HelpButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="BackgroundCircle"
                                     Fill="#3399FF"
                                     Width="16" Height="16"/>
                            <TextBlock Text="?"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,-1,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundCircle" Property="Fill" Value="#66B3FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BackgroundCircle" Property="Fill" Value="#0066CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Button x:Name="HelpButton"
                Style="{StaticResource HelpButtonStyle}"
                Click="HelpButton_Click"
                ToolTipService.InitialShowDelay="0"
                ToolTipService.ShowDuration="60000">
            <Button.ToolTip>
                <ToolTip x:Name="QuickTooltip" MaxWidth="300">
                    <TextBlock x:Name="TooltipText"
                               TextWrapping="Wrap"
                               Text="도움말을 로드 중..."/>
                </ToolTip>
            </Button.ToolTip>
        </Button>

        <!-- Help Popup -->
        <Popup x:Name="HelpPopup"
               PlacementTarget="{Binding ElementName=HelpButton}"
               Placement="Right"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">
            <Border Background="#2D2D30"
                    BorderBrush="#007ACC"
                    BorderThickness="1"
                    CornerRadius="5"
                    MaxWidth="400"
                    MinWidth="250"
                    Padding="15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="HelpTitle"
                                   Grid.Column="0"
                                   Text="도움말"
                                   Foreground="#FFD700"
                                   FontWeight="Bold"
                                   FontSize="14"/>

                        <Button Grid.Column="1"
                                Content="X"
                                Background="Transparent"
                                Foreground="Gray"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="ClosePopup_Click"
                                Width="20" Height="20"
                                VerticalAlignment="Top"/>
                    </Grid>

                    <!-- Cognex Equivalent (if available) -->
                    <Border x:Name="CognexBorder"
                            Grid.Row="1"
                            Background="#1E3A5F"
                            CornerRadius="3"
                            Padding="8,5"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Cognex: "
                                       Foreground="#7FBADC"
                                       FontSize="11"/>
                            <TextBlock x:Name="CognexText"
                                       Foreground="#A0D0F0"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="2"
                                  MaxHeight="300"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Description -->
                            <TextBlock x:Name="HelpDescription"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       LineHeight="20"/>

                            <!-- Usage (if available) -->
                            <Border x:Name="UsageBorder"
                                    Background="#252526"
                                    CornerRadius="3"
                                    Padding="10"
                                    Margin="0,10,0,0"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="사용 예시"
                                               Foreground="#4EC9B0"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="UsageText"
                                               Foreground="#CCCCCC"
                                               TextWrapping="Wrap"
                                               FontSize="11"
                                               LineHeight="18"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
