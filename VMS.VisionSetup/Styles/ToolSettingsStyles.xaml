<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Label -->
    <Style x:Key="SettingLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="LightGray"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="0,8,0,2"/>
    </Style>

    <!-- TextBox -->
    <Style x:Key="SettingTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#3E3E42"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#555555"/>
        <Setter Property="Padding" Value="5,3"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Slider -->
    <Style x:Key="SettingSliderStyle" TargetType="Slider">
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- ComboBox -->
    <Style x:Key="SettingComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="#3E3E42"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#555555"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- CheckBox -->
    <Style x:Key="SettingCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <!-- Section Header -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFD700"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,15,0,5"/>
    </Style>

    <!-- Slider Value Display -->
    <Style x:Key="SliderValueStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#00BFFF"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Expander -->
    <Style x:Key="SettingExpanderStyle" TargetType="Expander">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#555555"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="Padding" Value="0,0,0,5"/>
    </Style>

    <!-- Expander Header TextBlock -->
    <Style x:Key="ExpanderHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFD700"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Primary Action Button (blue) -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#007ACC"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#005A9E"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Secondary Action Button (gray) -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#555555"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#444444"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Success/Train Button (green) -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#2D7D46"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Warning/Apply Button (orange) -->
    <Style x:Key="WarningButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#D4760A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Add Model Button (blue accent) -->
    <Style x:Key="AccentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#0078D4"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Danger Button (red, same sizing as AccentButtonStyle) -->
    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#C42B1C"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Delete Button (red) -->
    <Style x:Key="DeleteButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#8B0000"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4,1"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Suggestion Label -->
    <Style x:Key="SuggestionLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF8C00"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>

    <!-- Suggestion Value -->
    <Style x:Key="SuggestionValueStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

</ResourceDictionary>
