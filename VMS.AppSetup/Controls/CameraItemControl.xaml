<UserControl x:Class="VMS.AppSetup.Controls.CameraItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="70" d:DesignWidth="400">

    <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1"
            CornerRadius="6" Padding="12,10" Margin="0,4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Enable Checkbox -->
            <CheckBox Grid.Column="0"
                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0">
                <CheckBox.Style>
                    <Style TargetType="CheckBox">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </CheckBox.Style>
            </CheckBox>

            <!-- Camera Info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}"
                               Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                    <TextBlock Text=" - " Foreground="#888888" FontSize="13"/>
                    <TextBlock Text="{Binding Manufacturer}"
                               Foreground="#0078D4" FontSize="13"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <TextBlock Text="ID: " Foreground="#888888" FontSize="11"/>
                    <TextBlock Text="{Binding Id}" Foreground="#AAAAAA" FontSize="11"
                               MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="  |  IP: " Foreground="#888888" FontSize="11" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding IpAddress}" Foreground="#AAAAAA" FontSize="11"/>
                </StackPanel>
            </StackPanel>

            <!-- Status Indicator -->
            <Border Grid.Column="2" Width="12" Height="12" CornerRadius="6"
                    VerticalAlignment="Center" Margin="10,0,0,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                <Setter Property="Background" Value="#555555"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </Border>
</UserControl>
