<UserControl x:Class="VMS.Controls.CameraDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VMS.ViewModels"
             d:DataContext="{d:DesignInstance vm:CameraViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Background="#2D2D2D"
            BorderBrush="{Binding StatusColor}"
            BorderThickness="3"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- Header with camera name and drag handle -->
            <Border Grid.Row="0"
                    Background="#3D3D3D"
                    CornerRadius="6,6,0,0"
                    Cursor="SizeAll"
                    x:Name="DragHandle">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0">
                        <TextBlock Text="&#xE722;"
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="#808080"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Name}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Settings icon and Status indicator -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Settings Button -->
                        <Button x:Name="SettingsButton"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="6,4"
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                ToolTip="Camera Settings">
                            <TextBlock Text="&#xE713;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="#B0B0B0"/>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#505050"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Status indicator -->
                        <Border Background="{Binding StatusColor}"
                                CornerRadius="4"
                                Padding="8,2"
                                Margin="0,4,8,4">
                            <TextBlock Text="{Binding StatusText}"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="11"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Camera image display -->
            <Border Grid.Row="1" Background="#1E1E1E" Margin="4">
                <Grid>
                    <!-- Placeholder when no image -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding CurrentImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                        <TextBlock Text="&#xE714;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="48"
                                   Foreground="#404040"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="No Image"
                                   Foreground="#606060"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Actual camera image -->
                    <Image Source="{Binding CurrentImage}"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                </Grid>
            </Border>

            <!-- Footer with Pass checkbox and info -->
            <Border Grid.Row="2" Background="#3D3D3D" CornerRadius="0,0,6,6">
                <Grid Margin="8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pass checkbox -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsPassed}"
                              VerticalAlignment="Center">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <StackPanel Orientation="Horizontal">
                                                <Border x:Name="CheckBorder"
                                                        Width="20" Height="20"
                                                        Background="#404040"
                                                        BorderBrush="#606060"
                                                        BorderThickness="1"
                                                        CornerRadius="4">
                                                    <TextBlock x:Name="CheckMark"
                                                               Text="&#xE73E;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="LimeGreen"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"/>
                                                </Border>
                                                <TextBlock Text="Pass"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           Margin="6,0,0,0"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="CheckBorder" Property="Background" Value="#2D5A2D"/>
                                                    <Setter TargetName="CheckBorder" Property="BorderBrush" Value="LimeGreen"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#808080"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>

                    <!-- Camera info -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding IpAddress}"
                               Foreground="#808080"
                               FontSize="11"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- Inspection count -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Count: " Foreground="#808080" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding InspectionCount}" Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Resize grip (bottom-right corner) -->
            <Thumb Grid.Row="1" Grid.RowSpan="2"
                   Width="16" Height="16"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Cursor="SizeNWSE"
                   x:Name="ResizeGrip">
                <Thumb.Template>
                    <ControlTemplate TargetType="Thumb">
                        <Grid Background="Transparent">
                            <Path Data="M 0,16 L 16,0 M 5,16 L 16,5 M 10,16 L 16,10"
                                  Stroke="#606060"
                                  StrokeThickness="1"/>
                        </Grid>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Grid>
    </Border>
</UserControl>
