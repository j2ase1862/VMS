<Window x:Class="VMS.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Width="460" Height="580"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Opacity="0"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="12" Margin="16">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0.3,1">
                <GradientStop Color="#1A1A2E" Offset="0"/>
                <GradientStop Color="#16213E" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Color="#000000" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="36,28">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Section -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Assets/ci.png" Width="300" Stretch="Uniform"
                       HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                <Border Height="2" Width="60" Margin="0,24,0,0" CornerRadius="1" Opacity="0.6">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#002196F3" Offset="0"/>
                            <GradientStop Color="#2196F3" Offset="0.5"/>
                            <GradientStop Color="#002196F3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock Text="Machine Vision Inspection Platform" FontSize="11" Foreground="#505070"
                           HorizontalAlignment="Center" Margin="0,16,0,0" FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Circular Progress Section -->
            <Grid Grid.Row="1" Width="140" Height="140" HorizontalAlignment="Center" Margin="0,20,0,16">
                <!-- Pulsing glow behind the circle -->
                <Ellipse x:Name="GlowEffect" Width="115" Height="115"
                         HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#402196F3" Offset="0"/>
                            <GradientStop Color="#002196F3" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.3" To="0.8" Duration="0:0:1.5">
                                        <DoubleAnimation.EasingFunction>
                                            <SineEase EasingMode="EaseInOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <!-- Background ring + progress arc -->
                <Canvas Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Width="120" Height="120" Stroke="#252540" StrokeThickness="5" Fill="Transparent"/>
                    <Path x:Name="ProgressArc" Stroke="#2196F3" StrokeThickness="5"
                          StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                </Canvas>

                <!-- Center circle with logo -->
                <Border Width="86" Height="86" CornerRadius="43"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2196F3" Offset="0"/>
                            <GradientStop Color="#1565C0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#2196F3" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="VMS" FontSize="26" FontWeight="Bold" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>
            </Grid>

            <!-- Status Text and Progress Bar -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,4,0,24">
                <TextBlock x:Name="StatusText" Text="Initializing..."
                           Foreground="#8888A8" FontSize="13" HorizontalAlignment="Center" Margin="0,0,0,14"
                           FontFamily="Segoe UI"/>

                <!-- Linear progress bar -->
                <Grid Width="280" Height="6">
                    <Border CornerRadius="3" Background="#252540"/>
                    <Border x:Name="ProgressFill" CornerRadius="3" HorizontalAlignment="Left" Width="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#1976D2" Offset="0"/>
                                <GradientStop Color="#42A5F5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>

                <TextBlock x:Name="PercentText" Text="0%"
                           Foreground="#505070" FontSize="11" HorizontalAlignment="Center" Margin="0,8,0,0"
                           FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Version info -->
            <TextBlock Grid.Row="3" Text="v1.0  &#169; 2026 BODA"
                       Foreground="#353550" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,2"
                       FontFamily="Segoe UI"/>
        </Grid>
    </Border>
</Window>
