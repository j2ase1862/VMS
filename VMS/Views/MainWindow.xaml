<Window x:Class="VMS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:VMS.ViewModels"
        xmlns:controls="clr-namespace:VMS.Controls"
        Title="{Binding ApplicationTitle}"
        WindowState="Maximized"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Panel animation -->
        <Storyboard x:Key="OpenPanel">
            <DoubleAnimation Storyboard.TargetName="SidePanel"
                             Storyboard.TargetProperty="Width"
                             To="320" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="ClosePanel">
            <DoubleAnimation Storyboard.TargetName="SidePanel"
                             Storyboard.TargetProperty="Width"
                             To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="PanelToggle">
            <BeginStoryboard Storyboard="{StaticResource OpenPanel}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="PanelToggle">
            <BeginStoryboard Storyboard="{StaticResource ClosePanel}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#2D2D2D">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0">
                    <TextBlock Text="&#xE774;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="24"
                               Foreground="#2196F3"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ApplicationTitle}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Center: Recipe info and controls -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Border Background="#3D3D3D" CornerRadius="4" Padding="12,4" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE82D;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="#808080"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentRecipeName}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Start/Stop buttons -->
                    <Button Style="{StaticResource ModernButton}"
                            Command="{Binding StartInspectionCommand}"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                            Margin="4,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Start"/>
                        </StackPanel>
                    </Button>

                    <Button Background="#F44336"
                            Foreground="White"
                            Command="{Binding StopInspectionCommand}"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                            Style="{StaticResource ModernButton}"
                            Margin="4,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE71A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Stop"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Right: Toolbar buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,8,0">
                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding SaveLayoutCommand}"
                            ToolTip="Save Layout">
                        <TextBlock Text="&#xE74E;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"/>
                    </Button>

                    <ToggleButton x:Name="PanelToggle"
                                  IsChecked="{Binding IsSidePanelOpen, Mode=TwoWay}"
                                  Style="{StaticResource IconToggleButton}"
                                  ToolTip="Settings Panel"
                                  Margin="4,0">
                        <TextBlock Text="&#xE713;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"/>
                    </ToggleButton>

                    <Rectangle Width="1" Fill="#404040" Margin="8,8"/>

                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding ExitApplicationCommand}"
                            ToolTip="Exit">
                        <TextBlock Text="&#xE8BB;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="#F44336"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Camera Display Area (No Scrollbars) -->
            <Canvas x:Name="CameraCanvas"
                    Grid.Column="0"
                    Background="#1E1E1E"
                    ClipToBounds="True">
                <ItemsControl ItemsSource="{Binding Cameras}"
                              Width="{Binding ActualWidth, ElementName=CameraCanvas}"
                              Height="{Binding ActualHeight, ElementName=CameraCanvas}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:CameraDisplayControl
                                Width="{Binding Width}"
                                Height="{Binding Height}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Alignment guide lines overlay (drawn on top, transparent to mouse) -->
                <Canvas x:Name="AlignmentGuideCanvas"
                        IsHitTestVisible="False"
                        Width="{Binding ActualWidth, ElementName=CameraCanvas}"
                        Height="{Binding ActualHeight, ElementName=CameraCanvas}"/>
            </Canvas>

            <!-- Sliding Side Panel -->
            <Border x:Name="SidePanel"
                    Grid.Column="1"
                    Width="0"
                    Background="#2D2D2D"
                    BorderBrush="#3D3D3D"
                    BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Panel Header -->
                        <TextBlock Text="Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16"/>

                        <!-- Selected Camera Settings -->
                        <Border Background="#3D3D3D"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,16"
                                Visibility="{Binding SelectedCamera, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Camera Settings"
                                           FontWeight="SemiBold"
                                           Foreground="#2196F3"
                                           Margin="0,0,0,12"/>

                                <TextBlock Text="{Binding SelectedCamera.Name}"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="0,0,0,8"/>

                                <!-- Step Selector -->
                                <TextBlock Text="Step"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           Margin="0,4,0,4"/>
                                <ComboBox ItemsSource="{Binding SelectedCamera.Steps}"
                                          SelectedItem="{Binding SelectedCamera.SelectedStep}"
                                          DisplayMemberPath="Name"
                                          Background="#404040"
                                          Foreground="White"
                                          BorderThickness="0"
                                          Padding="8,6"
                                          Margin="0,0,0,8">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>

                                <!-- Exposure -->
                                <TextBlock Text="Exposure (us)"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           Margin="0,8,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Grid.Column="0"
                                            Value="{Binding SelectedCamera.Exposure}"
                                            Minimum="100"
                                            Maximum="100000"
                                            VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding SelectedCamera.Exposure, StringFormat=N0}"
                                             Background="#404040"
                                             Foreground="White"
                                             BorderThickness="0"
                                             Padding="4"
                                             Margin="8,0,0,0"/>
                                </Grid>

                                <!-- Gain -->
                                <TextBlock Text="Gain"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           Margin="0,12,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Grid.Column="0"
                                            Value="{Binding SelectedCamera.Gain}"
                                            Minimum="0"
                                            Maximum="24"
                                            VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding SelectedCamera.Gain, StringFormat=N1}"
                                             Background="#404040"
                                             Foreground="White"
                                             BorderThickness="0"
                                             Padding="4"
                                             Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Recipe Section -->
                        <Border Background="#3D3D3D"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Recipe"
                                           FontWeight="SemiBold"
                                           Foreground="#2196F3"
                                           Margin="0,0,0,12"/>

                                <!-- Current Recipe Display -->
                                <Border Background="#404040"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CurrentRecipeName}"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CurrentRecipe.Version, StringFormat='v{0}', FallbackValue=''}"
                                                   Foreground="#808080"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>

                                <!-- Recipe List -->
                                <TextBlock Text="Available Recipes"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           Margin="0,0,0,4"/>
                                <ListBox ItemsSource="{Binding RecipeList}"
                                         SelectedItem="{Binding SelectedRecipeInfo}"
                                         Background="#404040"
                                         BorderThickness="0"
                                         MaxHeight="120"
                                         Margin="0,0,0,8">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="4,2">
                                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                <TextBlock Text="{Binding ModifiedAt, StringFormat='Modified: {0:yyyy-MM-dd}'}"
                                                           Foreground="#808080" FontSize="10"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <!-- Recipe Buttons -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Command="{Binding LoadRecipeCommand}"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0,0,4,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8E5;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="12"
                                                       Margin="0,0,4,0"/>
                                            <TextBlock Text="Load"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Grid.Column="1"
                                            Command="{Binding NewRecipeCommand}"
                                            Style="{StaticResource ModernButton}"
                                            Margin="4,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE710;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="12"
                                                       Margin="0,0,4,0"/>
                                            <TextBlock Text="New"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Command="{Binding SaveCurrentRecipeCommand}"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0,0,2,0"
                                            ToolTip="Save Recipe">
                                        <TextBlock Text="&#xE74E;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="12"/>
                                    </Button>
                                    <Button Grid.Column="1"
                                            Command="{Binding ExportRecipeCommand}"
                                            Style="{StaticResource ModernButton}"
                                            Margin="2,0,2,0"
                                            ToolTip="Export Recipe">
                                        <TextBlock Text="&#xEDE1;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="12"/>
                                    </Button>
                                    <Button Grid.Column="2"
                                            Command="{Binding ImportRecipeCommand}"
                                            Style="{StaticResource ModernButton}"
                                            Margin="2,0,0,0"
                                            ToolTip="Import Recipe">
                                        <TextBlock Text="&#xE8B5;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="12"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- External Tools Section -->
                        <Border Background="#3D3D3D"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="External Tools"
                                           FontWeight="SemiBold"
                                           Foreground="#2196F3"
                                           Margin="0,0,0,12"/>

                                <Button Command="{Binding LaunchVisionToolSetupCommand}"
                                        Style="{StaticResource ModernButton}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7AC;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="Vision Tool Setup"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding LaunchSetupCommand}"
                                        Background="#4CAF50"
                                        Style="{StaticResource ModernButton}"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE713;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="System Setup"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Statistics Section -->
                        <Border Background="#3D3D3D"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Statistics"
                                           FontWeight="SemiBold"
                                           Foreground="#2196F3"
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Total" Foreground="#B0B0B0"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalInspections}" Foreground="White" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Pass" Foreground="#4CAF50" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalPass}" Foreground="#4CAF50" FontWeight="Bold" Margin="0,4,0,0"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Fail" Foreground="#F44336" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TotalFail}" Foreground="#F44336" FontWeight="Bold" Margin="0,4,0,0"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Pass Rate" Foreground="#B0B0B0" Margin="0,8,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               Text="{Binding PassRate, StringFormat={}{0:N1}%}"
                                               Foreground="White" FontWeight="Bold" Margin="0,8,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D2D">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8"
                             Fill="{Binding IsRunning, Converter={StaticResource BoolToColorConverter}}"
                             Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding SystemStatus}"
                               Foreground="#B0B0B0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Camera count -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Cameras: " Foreground="#808080"/>
                    <TextBlock Text="{Binding Cameras.Count}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
